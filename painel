  <script>
    var lastFocused = 'body';
    var userEmail = "<?= userEmail ?>";
    var currentIndex = 0; 
    var totalRecords = 0;
    var anexosSelecionados = [];


    window.onload = function() { 
      carregarVariaveis(); 
      atualizarListaTemplates(); 
      
      document.getElementById('editorDiv').addEventListener('click', function(e) {
        if(e.target.tagName === 'IMG') {
          var novoTamanho = prompt("Largura da imagem (ex: 300px ou 50%):", e.target.style.width || "100%");
          if(novoTamanho) {
            e.target.style.width = novoTamanho;
            e.target.style.height = "auto";
          }
        }
      });
    };


    function toggleLoad(show) { 
      document.getElementById('loading').style.display = show ? 'flex' : 'none'; 
    }
    
    function fmt(cmd, val) { 
      document.execCommand(cmd, false, val); 
    }


    function mostrarSobre() {
      alert("Auto Email v2.1\n\nCriado por: Ademir Varj√£o\n2026");
    }


    function handleFileSelect(input) {
      if (input.files && input.files.length > 0) {
        Array.from(input.files).forEach(function(file) {
           var reader = new FileReader();
           reader.onload = function(e) {
             anexosSelecionados.push({
               name: file.name,
               type: file.type,
               data: e.target.result.split(',')[1] 
             });
             renderizarListaAnexos();
           };
           reader.readAsDataURL(file);
        });
      }
      input.value = ''; 
    }


    function renderizarListaAnexos() {
      var container = document.getElementById('listaAnexos');
      container.innerHTML = '';
      anexosSelecionados.forEach(function(arq, index) {
        var div = document.createElement('div');
        div.className = 'anexo-item';
        div.innerHTML = '<span>üìé ' + arq.name + '</span> <span class="btn-remove-anexo" onclick="removerAnexo(' + index + ')">√ó</span>';
        container.appendChild(div);
      });
    }


    function removerAnexo(index) {
      anexosSelecionados.splice(index, 1);
      renderizarListaAnexos();
    }


    function inserirImagem(input) {
      if (input.files && input.files[0]) {
        var file = input.files[0];
        var reader = new FileReader();
        reader.onload = function(e) {
          document.getElementById('editorDiv').focus();
          document.execCommand('insertImage', false, e.target.result);
        };
        reader.readAsDataURL(file);
      }
      input.value = '';
    }


    function setMode(mode) {
      document.getElementById('panel-edit').classList.remove('active');
      document.getElementById('panel-view').classList.remove('active');
      document.querySelectorAll('.tab').forEach(function(b) { b.classList.remove('active'); });
      
      if (mode === 'edit') {
        document.getElementById('panel-edit').classList.add('active');
        document.querySelectorAll('.tab')[0].classList.add('active');
      } else {
        document.getElementById('panel-view').classList.add('active');
        document.querySelectorAll('.tab')[1].classList.add('active');
        atualizarPreview();
      }
    }


    function salvarTemplateAtual() {
      var s = document.getElementById('inpSubject').value;
      var c = document.getElementById('editorDiv').innerHTML;
      
      if(!s || !c || c === '<br>' || c === '<p><br></p>') {
        alert("Preencha assunto e corpo");
        return;
      }
      
      var n = prompt("Nome do Template:");
      if(!n) return;
      
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function(r){ 
          toggleLoad(false);
          alert(r.message); 
          atualizarListaTemplates(); 
        })
        .withFailureHandler(function(e){ 
          toggleLoad(false); 
          alert("Erro: " + e); 
        })
        .salvarNovoTemplate(n, s, c);
    }


    function atualizarListaTemplates() {
      var container = document.getElementById('listaTemplates');
      
      google.script.run
        .withSuccessHandler(function(lista) {
          container.innerHTML = '';
          
          if(!lista || lista.length === 0) { 
            container.innerHTML = '<div style="font-size: 10px; color: #999; padding: 5px;">Vazio.</div>'; 
            return; 
          }
          
          lista.forEach(function(nome) {
            var item = document.createElement('div');
            item.className = 'template-item';
            
            var nameSpan = document.createElement('span');
            nameSpan.className = 'template-name';
            nameSpan.textContent = nome;
            nameSpan.title = nome;
            
            var actionsDiv = document.createElement('div');
            actionsDiv.className = 'template-actions';
            
            var loadBtn = document.createElement('button');
            loadBtn.className = 'icon-btn';
            loadBtn.textContent = 'üìÇ';
            loadBtn.title = 'Carregar';
            
            var deleteBtn = document.createElement('button');
            deleteBtn.className = 'icon-btn';
            deleteBtn.textContent = 'üóëÔ∏è';
            deleteBtn.title = 'Excluir';
            deleteBtn.style.color = 'red';
            
            actionsDiv.appendChild(loadBtn);
            actionsDiv.appendChild(deleteBtn);
            
            item.appendChild(nameSpan);
            item.appendChild(actionsDiv);
            
            nameSpan.onclick = function() { carregarTemplate(nome); };
            loadBtn.onclick = function(e) { e.stopPropagation(); carregarTemplate(nome); };
            deleteBtn.onclick = function(e) { e.stopPropagation(); excluirTemplate(nome); };
            
            container.appendChild(item);
          });
        })
        .withFailureHandler(function(e) { 
          container.innerHTML = '<div style="font-size: 10px; color: red;">Erro</div>';
        })
        .listarMeusTemplates();
    }


    function carregarTemplate(nome) { 
      if(!confirm("Carregar o template '" + nome + "'?")) return;
      
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function(resposta) {
          toggleLoad(false);
          
          console.log('Resposta:', resposta);
          
          if(resposta && resposta.success) {
            document.getElementById('inpSubject').value = resposta.assunto || '';
            document.getElementById('editorDiv').innerHTML = resposta.corpo || '<p>Vazio</p>';
            
            setMode('edit');
            
            setTimeout(function() {
              document.getElementById('editorDiv').focus();
            }, 100);
            
            alert('Template "' + nome + '" carregado!');
          } else {
            alert('Erro: ' + (resposta ? resposta.message : 'Resposta inv√°lida'));
          }
        })
        .withFailureHandler(function(erro) { 
          toggleLoad(false);
          alert('Erro ao carregar: ' + erro); 
        })
        .carregarTemplateEspecifico(nome);
    }
    
    function excluirTemplate(nome) { 
      if(!confirm("Excluir '" + nome + "'?")) return;
      
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function() { 
          toggleLoad(false); 
          atualizarListaTemplates(); 
        })
        .withFailureHandler(function(e) { 
          toggleLoad(false); 
          alert(e); 
        })
        .excluirTemplate(nome);
    }


    function carregarVariaveis() { 
      google.script.run
        .withSuccessHandler(function(vars) { 
          var c = document.getElementById('varsContainer'); 
          c.innerHTML = ''; 
          
          vars.forEach(function(v) { 
            var chip = document.createElement('div'); 
            chip.className = 'chip'; 
            chip.textContent = '{{' + v + '}}'; 
            chip.onclick = function() { inserirVariavel('{{' + v + '}}'); }; 
            c.appendChild(chip); 
          }); 
        })
        .getVariaveisDisponiveis();
    
    }
    function limparEditor() {
      if(!confirm("Limpar todo o conte√∫do do editor?\n\nAssunto e corpo ser√£o apagados.")) return;
  
      document.getElementById('inpSubject').value = '';
      document.getElementById('editorDiv').innerHTML = '';
      document.getElementById('editorDiv').focus();
    }

    function importarAssinatura() { 
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function(sig) { 
          toggleLoad(false); 
          if(sig) {
            document.getElementById('editorDiv').innerHTML += '<br><br>' + sig;
            alert('Assinatura importada!');
          } else {
            alert("Sem assinatura no Gmail");
          }
        })
        .withFailureHandler(function(e) { 
          toggleLoad(false); 
          alert(e); 
        })
        .getAssinaturaGmail();
    }


    function inserirVariavel(txt) { 
      if(lastFocused === 'subject'){ 
        var e = document.getElementById('inpSubject');
        var v = e.value; 
        e.value = v.substring(0, e.selectionStart) + txt + v.substring(e.selectionEnd); 
        e.focus(); 
      } else { 
        document.getElementById('editorDiv').focus(); 
        document.execCommand('insertText', false, txt);
      } 
    }


    function enviarTeste() {
      var s = document.getElementById('inpSubject').value;
      var c = document.getElementById('editorDiv').innerHTML;
      
      if(!s) {
        alert("Falta assunto");
        return;
      }
      
      var dest = prompt("E-mail teste:", userEmail);
      if(!dest) return;
      
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function(r) { 
          toggleLoad(false); 
          alert(r.message); 
        })
        .withFailureHandler(function(e) { 
          toggleLoad(false); 
          alert("Erro: " + e); 
        })
        .enviarEmailTeste(c, s, dest, anexosSelecionados);
    }


    function enviarEmMassa() {
      var s = document.getElementById('inpSubject').value;
      var c = document.getElementById('editorDiv').innerHTML;
      var cc = document.getElementById('inpGlobalCC').value;
      
      if (!s || !s.trim()) {
        alert("Insira um Assunto");
        return;
      }
      
      if (!c || c.trim() === "<br>" || c.trim() === "<p><br></p>") {
        alert("Corpo vazio");
        return;
      }
      
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler(function(qtd) {
          toggleLoad(false);
          
          if (qtd === 0) {
            alert("‚ö†Ô∏è Nenhuma linha vis√≠vel");
            return;
          }


          var msg = "Enviar para " + qtd + " destinat√°rios?\n\nAssunto: " + s;
          if(anexosSelecionados.length > 0) {
            msg += "\nüìé Anexos: " + anexosSelecionados.length;
          }
          
          if (!confirm(msg)) return;
          
          toggleLoad(true);
          
          google.script.run
            .withSuccessHandler(function(r) { 
              toggleLoad(false); 
              alert(r.message); 
            })
            .withFailureHandler(function(e) { 
              toggleLoad(false); 
              alert("Erro: " + e); 
            })
            .executarEnvioEmMassa(c, s, cc, anexosSelecionados);
        })
        .withFailureHandler(function(e) {
           toggleLoad(false);
           alert("Erro: " + e);
        })
        .contarDestinatarios();
    }


    function atualizarPreview() {
      toggleLoad(true);
      var h = document.getElementById('editorDiv').innerHTML;
      var s = document.getElementById('inpSubject').value;
      
      google.script.run
        .withSuccessHandler(function(r) {
          toggleLoad(false);
          
          if(r.error) { 
            document.getElementById('framePreview').srcdoc = r.error; 
            return; 
          }
          
          currentIndex = r.index; 
          totalRecords = r.total;
          
          document.getElementById('lblCounter').innerText = (r.index + 1) + ' / ' + r.total;
          document.getElementById('previewTo').innerText = r.para;
          document.getElementById('previewCC').innerText = r.cc;
          document.getElementById('previewSubject').innerText = r.assuntoPreview;
          
          var f = document.getElementById('framePreview');
          f.style.height = '100px';
          
          var d = f.contentWindow.document;
          d.open();
          d.write('<style>body{margin:0; padding:40px; font-family:Arial; word-wrap:break-word;} img{max-width:100%; height:auto;}</style>' + r.htmlPreview);
          d.close();
          
          setTimeout(function() {
             var h = Math.max(d.body.scrollHeight, d.body.offsetHeight);
             f.style.height = (h + 50) + 'px';
          }, 100);
        })
        .withFailureHandler(function(e) { 
          toggleLoad(false); 
          alert("Erro: " + e); 
        })
        .gerarPreview(h, s, currentIndex);
    }
    
    function mudarIndex(delta) { 
      var n = currentIndex + delta; 
      if(n >= 0 && n < totalRecords) { 
        currentIndex = n; 
        atualizarPreview(); 
      } 
    }
  </script>
</body>
</html>
