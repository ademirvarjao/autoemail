  <script>
    // ESTADO DA APLICA√á√ÉO
    let lastFocused = 'body';
    const userEmail = "<?= userEmail ?>";
    let state = {
      currentIndex: 0,
      totalRecords: 0,
      anexos: []
    };

    // INICIALIZA√á√ÉO
    window.onload = () => { 
      carregarVariaveis(); 
      atualizarListaTemplates(); 
      
      // Listener para redimensionar imagem
      document.getElementById('editorDiv').addEventListener('click', (e) => {
        if(e.target.tagName === 'IMG') {
          const novoTamanho = prompt("Defina a largura (ex: 300px ou 50%):", e.target.style.width || "100%");
          if(novoTamanho) {
            e.target.style.width = novoTamanho;
            e.target.style.height = "auto";
          }
        }
      });
    };

    // UI HELPER
    const toggleLoad = (show) => document.getElementById('loading').style.display = show ? 'flex' : 'none';

    // EDITOR FUNCTIONS
    function fmt(cmd, val) { 
      document.execCommand(cmd, false, val);
      document.getElementById('editorDiv').focus();
    }

    function limparEditor() {
      if(!confirm("Tem certeza que deseja limpar todo o conte√∫do?")) return;
      document.getElementById('inpSubject').value = '';
      document.getElementById('editorDiv').innerHTML = '';
      document.getElementById('editorDiv').focus();
    }

    function inserirImagem(input) {
      if (input.files && input.files[0]) {
        const file = input.files[0];
        const reader = new FileReader();
        reader.onload = (e) => {
          document.getElementById('editorDiv').focus();
          document.execCommand('insertImage', false, e.target.result);
        };
        reader.readAsDataURL(file);
      }
      input.value = '';
    }

    function importarAssinatura() { 
      toggleLoad(true);
      google.script.run
        .withSuccessHandler((sig) => { 
          toggleLoad(false); 
          if(sig) {
            document.getElementById('editorDiv').innerHTML += `<br><br>${sig}`;
            // Foca no editor para permitir undo se necess√°rio, embora execCommand n√£o pegue append HTML direto
          } else {
            alert("Nenhuma assinatura encontrada na conta Gmail principal.");
          }
        })
        .withFailureHandler(handleError)
        .getAssinaturaGmail();
    }

    // VARI√ÅVEIS E INPUTS
    function carregarVariaveis() { 
      google.script.run
        .withSuccessHandler((vars) => { 
          const container = document.getElementById('varsContainer'); 
          container.innerHTML = ''; 
          
          vars.forEach(v => { 
            const chip = document.createElement('div'); 
            chip.className = 'chip'; 
            chip.textContent = `{{${v}}}`; 
            chip.onclick = () => inserirVariavel(`{{${v}}}`); 
            container.appendChild(chip); 
          }); 
        })
        .getVariaveisDisponiveis();
    }

    function inserirVariavel(txt) { 
      if(lastFocused === 'subject'){ 
        const el = document.getElementById('inpSubject');
        const v = el.value; 
        const start = el.selectionStart;
        el.value = v.slice(0, start) + txt + v.slice(el.selectionEnd); 
        el.focus();
        el.setSelectionRange(start + txt.length, start + txt.length);
      } else { 
        document.getElementById('editorDiv').focus(); 
        document.execCommand('insertText', false, txt);
      } 
    }

    // ANEXOS
    function handleFileSelect(input) {
      if (input.files && input.files.length > 0) {
        Array.from(input.files).forEach(file => {
           const reader = new FileReader();
           reader.onload = (e) => {
             state.anexos.push({
               name: file.name,
               type: file.type,
               data: e.target.result.split(',')[1] 
             });
             renderizarListaAnexos();
           };
           reader.readAsDataURL(file);
        });
      }
      input.value = ''; 
    }

    function renderizarListaAnexos() {
      const container = document.getElementById('listaAnexos');
      container.innerHTML = '';
      state.anexos.forEach((arq, index) => {
        const div = document.createElement('div');
        div.className = 'attachment-item';
        div.innerHTML = `
          <div style="display:flex; align-items:center; gap:6px; overflow:hidden;">
            <span class="material-icons" style="font-size:14px; color:#5f6368">insert_drive_file</span>
            <span style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis; max-width:180px;">${arq.name}</span>
          </div>
          <span class="btn-remove" onclick="removerAnexo(${index})" title="Remover">√ó</span>
        `;
        container.appendChild(div);
      });
    }

    function removerAnexo(index) {
      state.anexos.splice(index, 1);
      renderizarListaAnexos();
    }

    // TEMPLATES
    function salvarTemplateAtual() {
      const assunto = document.getElementById('inpSubject').value;
      const corpo = document.getElementById('editorDiv').innerHTML;
      
      if(!assunto.trim() || !corpo.trim()) {
        alert("Preencha o Assunto e o Corpo do email antes de salvar.");
        return;
      }
      
      const nome = prompt("D√™ um nome para este Template:");
      if(!nome) return;
      
      toggleLoad(true);
      google.script.run
        .withSuccessHandler((r) => { 
          toggleLoad(false);
          if(r.success) {
             atualizarListaTemplates(); 
             alert(r.message);
          } else {
             alert(r.message);
          }
        })
        .withFailureHandler(handleError)
        .salvarNovoTemplate(nome, assunto, corpo);
    }

    function atualizarListaTemplates() {
      const container = document.getElementById('listaTemplates');
      google.script.run
        .withSuccessHandler((lista) => {
          container.innerHTML = '';
          if(!lista || lista.length === 0) { 
            container.innerHTML = '<div style="font-size: 11px; color: #999; padding: 5px; font-style:italic;">Nenhum template salvo.</div>'; 
            return; 
          }
          
          lista.forEach(nome => {
            const item = document.createElement('div');
            item.className = 'template-item';
            
            // HTML Structure
            item.innerHTML = `
              <span class="template-name" title="${nome}">${nome}</span>
              <div class="template-actions">
                <button class="icon-btn" title="Carregar" onclick="event.stopPropagation(); carregarTemplate('${nome}')">
                  <span class="material-icons" style="font-size:16px; color:var(--primary)">folder_open</span>
                </button>
                <button class="icon-btn" title="Excluir" onclick="event.stopPropagation(); excluirTemplate('${nome}')">
                  <span class="material-icons" style="font-size:16px; color:var(--danger)">delete_outline</span>
                </button>
              </div>
            `;
            // Click no item todo carrega tamb√©m
            item.onclick = () => carregarTemplate(nome);
            container.appendChild(item);
          });
        })
        .withFailureHandler(handleError)
        .listarMeusTemplates();
    }

    function carregarTemplate(nome) { 
      if(!confirm(`Deseja substituir o conte√∫do atual pelo template "${nome}"?`)) return;
      toggleLoad(true);
      
      google.script.run
        .withSuccessHandler((res) => {
          toggleLoad(false);
          if(res.success) {
            document.getElementById('inpSubject').value = res.assunto;
            document.getElementById('editorDiv').innerHTML = res.corpo;
            setMode('edit');
          } else {
            alert(res.message);
          }
        })
        .withFailureHandler(handleError)
        .carregarTemplateEspecifico(nome);
    }

    function excluirTemplate(nome) {
      if(!confirm(`Tem certeza que deseja excluir "${nome}"?`)) return;
      toggleLoad(true);
      google.script.run
        .withSuccessHandler((res) => {
           toggleLoad(false);
           if(res.success) atualizarListaTemplates();
           else alert(res.message || "Erro ao excluir");
        })
        .withFailureHandler(handleError)
        .excluirTemplate(nome);
    }

    // ENVIO
    function enviarTeste() {
      const assunto = document.getElementById('inpSubject').value;
      const corpo = document.getElementById('editorDiv').innerHTML;
      
      if(!assunto.trim()) { alert("Por favor, insira um assunto."); return; }
      
      const dest = prompt("Digite o e-mail de teste:", userEmail);
      if(!dest) return;
      
      toggleLoad(true);
      google.script.run
        .withSuccessHandler((r) => { 
          toggleLoad(false); 
          alert(r.message); 
        })
        .withFailureHandler(handleError)
        .enviarEmailTeste(corpo, assunto, dest, state.anexos);
    }

    function enviarEmMassa() {
      const assunto = document.getElementById('inpSubject').value;
      const corpo = document.getElementById('editorDiv').innerHTML;
      const cc = document.getElementById('inpGlobalCC').value;
      
      if (!assunto.trim()) { alert("Obrigat√≥rio: Insira um Assunto"); return; }
      if (!corpo.trim() || corpo === '<br>') { alert("Obrigat√≥rio: O corpo do email n√£o pode estar vazio"); return; }
      
      toggleLoad(true);
      google.script.run
        .withSuccessHandler((qtd) => {
          toggleLoad(false);
          
          if (qtd === 0) {
            alert("‚ö†Ô∏è Aten√ß√£o: Nenhuma linha vis√≠vel encontrada na planilha (excluindo cabe√ßalho).");
            return;
          }

          let msg = `CONFIRMA√á√ÉO DE ENVIO\n\n`;
          msg += `üìß Destinat√°rios: ${qtd}\n`;
          msg += `üìù Assunto: "${assunto}"\n`;
          if(state.anexos.length > 0) msg += `üìé Anexos: ${state.anexos.length} arquivo(s)\n`;
          msg += `\nDeseja iniciar o disparo?`;
          
          if (!confirm(msg)) return;
          
          toggleLoad(true);
          google.script.run
            .withSuccessHandler((r) => { 
              toggleLoad(false); 
              alert(r.message); 
            })
            .withFailureHandler(handleError)
            .executarEnvioEmMassa(corpo, assunto, cc, state.anexos);
        })
        .withFailureHandler(handleError)
        .contarDestinatarios();
    }

    // PREVIEW E NAVEGA√á√ÉO
    function setMode(mode) {
      document.getElementById('panel-edit').classList.remove('active');
      document.getElementById('panel-view').classList.remove('active');
      document.querySelectorAll('.tab').forEach(b => b.classList.remove('active'));
      
      if (mode === 'edit') {
        document.getElementById('panel-edit').classList.add('active');
        document.querySelectorAll('.tab')[0].classList.add('active');
      } else {
        document.getElementById('panel-view').classList.add('active');
        document.querySelectorAll('.tab')[1].classList.add('active');
        atualizarPreview();
      }
    }

    function atualizarPreview() {
      toggleLoad(true);
      const html = document.getElementById('editorDiv').innerHTML;
      const assunto = document.getElementById('inpSubject').value;
      
      google.script.run
        .withSuccessHandler((r) => {
          toggleLoad(false);
          if(r.error) { 
             document.getElementById('framePreview').srcdoc = `<div style="color:red; font-family:sans-serif; padding:20px;">${r.error}</div>`; 
             return; 
          }
          
          state.currentIndex = r.index; 
          state.totalRecords = r.total;
          
          document.getElementById('lblCounter').innerText = `${r.index + 1} / ${r.total}`;
          document.getElementById('previewTo').innerText = r.para;
          document.getElementById('previewCC').innerText = r.cc;
          document.getElementById('previewSubject').innerText = r.assuntoPreview;
          
          const iframe = document.getElementById('framePreview');
          const doc = iframe.contentWindow.document;
          
          doc.open();
          doc.write(`
            <style>
              body { margin: 0; padding: 20px; font-family: Arial, sans-serif; word-wrap: break-word; color: #333; }
              img { max-width: 100%; height: auto; }
              p { margin-bottom: 10px; }
            </style>
            ${r.htmlPreview}
          `);
          doc.close();
        })
        .withFailureHandler(handleError)
        .gerarPreview(html, assunto, state.currentIndex);
    }
    
    function mudarIndex(delta) { 
      const novoIndex = state.currentIndex + delta;
      if(novoIndex >= 0 && novoIndex < state.totalRecords) { 
        state.currentIndex = novoIndex; 
        atualizarPreview();
      } 
    }

    function handleError(e) {
      toggleLoad(false);
      console.error(e);
      alert(`Ocorreu um erro: ${e.message || e}`);
    }
  </script>
</body>
</html>
